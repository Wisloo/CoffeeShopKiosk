<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>CoffeeShopKiosk</RootNamespace>
    <AssemblyName>CoffeeShopKiosk</AssemblyName>
    <UseWPF>true</UseWPF>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="CoffeeShopKiosk/Images/*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- Exclude legacy ambient service files from compilation (removed functionality) -->
  <ItemGroup>
    <Compile Remove="Services\AmbientSoundService.cs" />
    <Compile Remove="Services\AmbientVisualService.cs" />
  </ItemGroup>
</Project>
