<UserControl x:Class="CoffeeShopKiosk.Views.CartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#FFF" CornerRadius="12" Padding="12" Margin="12" Width="320">
        <StackPanel>
            <TextBlock Text="Cart" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />

            <ListBox ItemsSource="{Binding Items}" BorderThickness="0" Height="360">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding Product.Name}" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding Product.Price, StringFormat='{}{0:C}'}" Foreground="#27ae60" />
                                <TextBlock Text="{Binding Quantity, StringFormat='Qty: {0}'}" FontSize="12" Foreground="#666" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding LineTotal, StringFormat='{}{0:C}'}" HorizontalAlignment="Right" />
                                <Button Content="Remove" Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Margin="0,6,0,0" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Separator Margin="0,8" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Total: " FontWeight="Bold" VerticalAlignment="Center" />
                <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:C}'}" FontWeight="Bold" Margin="6,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Button Content="Checkout" Command="{Binding CheckoutCommand}" Margin="0,12,0,0" Background="#4CAF50" Foreground="White" Height="36"/>
        </StackPanel>
    </Border>
</UserControl>