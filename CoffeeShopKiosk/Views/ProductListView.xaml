<UserControl x:Class="CoffeeShopKiosk.Views.ProductListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#6F4E37" Offset="0.0" />
                <GradientStop Color="#C7A17A" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,40,0,0" HorizontalAlignment="Center" Width="1100">
                <TextBlock Text="Coffee Products and Pastries" FontSize="36" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2D1606" HorizontalAlignment="Center"/>
                <!-- Product count removed -->
                <ItemsControl ItemsSource="{Binding Products}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid IsItemsHost="True" Columns="3" HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel Width="260" Height="360" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Border Width="150" Height="150" CornerRadius="80" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,8" >
                                        <Image Source="{Binding ImageUrl}" Height="130" Width="130" Margin="0" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" ImageFailed="Image_ImageFailed" />
                                    </Border>

                                    <TextBlock Text="{Binding Name}" FontSize="22" FontWeight="Bold" Foreground="{StaticResource MutedText}" Margin="0,8,0,2" HorizontalAlignment="Center" />
                                    <TextBlock Text="{Binding Description}" FontSize="13" Foreground="#7B4F2A" TextWrapping="Wrap" Margin="10,0,10,6" TextAlignment="Center" />

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentGreen}" VerticalAlignment="Center" />
                                        <Button Style="{StaticResource PrimaryButton}" Command="{Binding DataContext.AddToOrderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Margin="12,0,0,0">Add</Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        <Grid.Resources>
            <DropShadowEffect x:Key="DropShadowEffect" Color="#6F4E37" BlurRadius="16" ShadowDepth="3" Opacity="0.25" />
        </Grid.Resources>
    </Grid>
</UserControl>