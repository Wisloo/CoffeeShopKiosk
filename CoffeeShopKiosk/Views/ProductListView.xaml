<User's request for the contents of the file: /CoffeeShopKiosk/CoffeeShopKiosk/CoffeeShopKiosk/Views/ProductListView.xaml>

<contents>
<Window x:Class="CoffeeShopKiosk.Views.ProductListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product List" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Coffee Products and Pastries" FontSize="24" FontWeight="Bold" Margin="10"/>
                <ItemsControl ItemsSource="{Binding Products}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10">
                                <StackPanel>
                                    <Image Source="{Binding ImageUrl}" Height="100" Width="100" />
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Description}" FontSize="14" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}" FontSize="16" FontWeight="Bold"/>
                                    <Button Content="Add to Order" Command="{Binding DataContext.AddToOrderCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="5"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
</contents>