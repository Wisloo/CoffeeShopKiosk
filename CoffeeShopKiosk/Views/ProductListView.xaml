<UserControl x:Class="CoffeeShopKiosk.Views.ProductListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#6F4E37" Offset="0.0" />
                <GradientStop Color="#C7A17A" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,40,0,0" HorizontalAlignment="Center" Width="1100">
                <TextBlock Text="Coffee Products and Pastries" FontSize="36" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2D1606" HorizontalAlignment="Center"/>
                <!-- Product count removed -->
                <ItemsControl ItemsSource="{Binding Products}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid IsItemsHost="True" Columns="4" HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="20" BorderBrush="#BFA37A" BorderThickness="2" Margin="20" Padding="18" Background="#FFF8F0" Effect="{DynamicResource DropShadowEffect}">
                                <StackPanel Width="220" Height="320" VerticalAlignment="Center">
                                    <Image Source="{Binding ImageUrl}" Height="110" Width="110" Margin="0,0,0,12" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" ImageFailed="Image_ImageFailed" />
                                    <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Foreground="#6F4E37" Margin="0,0,0,6"/>
                                    <TextBlock Text="{Binding Description}" FontSize="14" Foreground="#7B4F2A" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                    <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}" FontSize="18" FontWeight="Bold" Foreground="#27ae60" Margin="0,0,0,14"/>
                                    <Button Content="Add to Order" Command="{Binding DataContext.AddToOrderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Margin="0,0,0,0" Height="32" Background="#6F4E37" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        <Grid.Resources>
            <DropShadowEffect x:Key="DropShadowEffect" Color="#6F4E37" BlurRadius="16" ShadowDepth="3" Opacity="0.25" />
        </Grid.Resources>
    </Grid>
</UserControl>