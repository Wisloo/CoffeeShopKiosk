<Window x:Class="CoffeeShopKiosk.Views.ReceiptModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Receipt" Height="320" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Border Style="{StaticResource CardStyle}" Margin="10">
            <StackPanel>
                <TextBlock Text="Order Receipt" FontSize="20" FontWeight="Bold" Margin="0,0,0,8" />
                <ItemsControl ItemsSource="{Binding Items}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="{Binding Product.Name}" Width="220" />
                                <TextBlock Text="{Binding Quantity, StringFormat='x{0}'}" Width="40" />
                                <TextBlock Text="{Binding LineTotal, StringFormat='{}{0:C}'}" Width="80" TextAlignment="Right" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Separator Margin="0,8"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Total:" FontWeight="Bold" Margin="0,0,8,0" />
                    <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:C}'}" FontWeight="Bold" />
                </StackPanel>

                <Button Content="Close" Width="120" HorizontalAlignment="Right" Margin="0,12,0,0" Click="Close_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>