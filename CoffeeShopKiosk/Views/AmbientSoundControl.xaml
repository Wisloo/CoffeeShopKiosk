<UserControl x:Class="CoffeeShopKiosk.Views.AmbientSoundControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource CardStyle}">
        <StackPanel>
            <TextBlock Text="Theme Preview" FontSize="16" FontWeight="Bold" Foreground="{StaticResource MutedText}" />
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                <TextBlock Text="Theme preview is handled in the header or Visual Settings" VerticalAlignment="Center" Opacity="0.8" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>