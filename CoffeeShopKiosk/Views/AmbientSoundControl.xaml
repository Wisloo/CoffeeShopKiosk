<UserControl x:Class="CoffeeShopKiosk.Views.AmbientSoundControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource CardStyle}">
        <StackPanel>
            <TextBlock Text="Ambient Sound" FontSize="16" FontWeight="Bold" Foreground="{StaticResource MutedText}" />
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                <ComboBox x:Name="SoundChoice" Width="140" SelectedValuePath="Content">
                    <ComboBoxItem>Rain</ComboBoxItem>
                </ComboBox>
                <Slider x:Name="Volume" Width="120" Minimum="0" Maximum="1" Value="0.5" SmallChange="0.05" Margin="12,0,0,0" />
                <Button Content="Play" Width="70" Margin="12,0,0,0" Click="Play_Click" Style="{StaticResource PrimaryButton}" />
                <Button Content="Stop" Width="70" Margin="6,0,0,0" Click="Stop_Click" Style="{StaticResource SecondaryButton}" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>