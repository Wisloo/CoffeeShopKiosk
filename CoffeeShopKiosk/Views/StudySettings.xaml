<Window x:Class="CoffeeShopKiosk.Views.StudySettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visual Settings" Height="320" Width="380" WindowStartupLocation="CenterOwner">
    <!-- Cleaned up: removed ambient visuals toggle; theme selection only -->
    <Grid Margin="12">
        <StackPanel>
            <CheckBox x:Name="Spotlight" Content="Enable Focus Spotlight" Margin="0,6" />
            <CheckBox x:Name="HideImages" Content="Hide product images" Margin="0,6" />
            <CheckBox x:Name="EnableAI" Content="Enable AI Study Assistant (opt-in)" Margin="0,6" />

            <!-- API Key (optional) -->
            <TextBlock Text="OpenAI API Key (optional)" Margin="0,6,0,0" />
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <PasswordBox x:Name="ApiKeyBox" Width="260" ToolTip="Paste your OpenAI API key here to enable real AI responses" />
                <Button x:Name="TestApiKey" Content="Test key" Width="80" Margin="8,0,0,0" Click="TestApiKey_Click" Style="{StaticResource SecondaryButton}" />
            </StackPanel>
            <CheckBox x:Name="EnableDebug" Content="Enable AI debug logging (developer only)" Margin="0,8,0,0" />
            <TextBlock Text="If left empty, the assistant will use local fallback tips." FontSize="11" Opacity="0.7" Margin="0,4,0,0" />

            <Separator Margin="0,8" />
            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Text="Theme" VerticalAlignment="Center" Margin="0,0,8,0" />
                <ComboBox x:Name="ThemeChoice" Width="160" SelectedValuePath="Content">
                    <ComboBoxItem>Cafe</ComboBoxItem>
                    <ComboBoxItem>Rain</ComboBoxItem>
                    <ComboBoxItem>Sunset</ComboBoxItem>
                    <ComboBoxItem>Minimal</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <CheckBox x:Name="EnableVisuals" Content="Enable theme effects" Margin="0,6" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Cancel" Width="80" Click="Cancel_Click" Style="{StaticResource SecondaryButton}" />
                <Button Content="Save" Width="80" Margin="8,0,0,0" Click="Save_Click" Style="{StaticResource PrimaryButton}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>