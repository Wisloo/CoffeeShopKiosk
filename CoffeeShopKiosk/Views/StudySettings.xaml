<Window x:Class="CoffeeShopKiosk.Views.StudySettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Study Settings" Height="320" Width="380" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <StackPanel>
            <CheckBox x:Name="Spotlight" Content="Enable Focus Spotlight" Margin="0,6" />
            <CheckBox x:Name="HideImages" Content="Hide product images" Margin="0,6" />
            <Separator Margin="0,8" />
            <CheckBox x:Name="AmbientEnabled" Content="Enable Ambient Sound" Margin="0,6" />
            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Text="Sound" VerticalAlignment="Center" Margin="0,0,8,0" />
                <ComboBox x:Name="SoundChoice" Width="160">
                    <ComboBoxItem>Rain</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Text="Volume" VerticalAlignment="Center" Margin="0,0,8,0" />
                <Slider x:Name="Volume" Minimum="0" Maximum="1" Value="0.5" Width="200" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Cancel" Width="80" Click="Cancel_Click" Style="{StaticResource SecondaryButton}" />
                <Button Content="Save" Width="80" Margin="8,0,0,0" Click="Save_Click" Style="{StaticResource PrimaryButton}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>