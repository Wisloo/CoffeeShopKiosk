<UserControl x:Class="CoffeeShopKiosk.Views.PomodoroView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:CoffeeShopKiosk.ViewModels"
    Width="320">
    <Border Style="{StaticResource CardStyle}">
        <StackPanel>
            <TextBlock Text="Pomodoro" FontSize="18" FontWeight="Bold" Foreground="{StaticResource MutedText}" />
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Center">
                <TextBlock Text="{Binding DisplayTime}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource MutedText}" VerticalAlignment="Center" />
                <StackPanel Orientation="Vertical" Margin="12,0,0,0" VerticalAlignment="Center">
                    <Button Content="Start/Pause" Command="{Binding StartPauseCommand}" Style="{StaticResource PrimaryButton}" Width="120" Height="36" />
                    <Button Content="Reset" Command="{Binding ResetCommand}" Style="{StaticResource SecondaryButton}" Width="120" Height="34" Margin="0,6,0,0" />
                </StackPanel>
            </StackPanel>
            <TextBlock Text="{Binding Path=IsWorkPeriod, Converter={StaticResource BooleanToPeriodConverter}}" HorizontalAlignment="Center" Margin="0,8,0,0" Foreground="{StaticResource MutedText}" />
        </StackPanel>
    </Border>
</UserControl>